<script type="text/javascript">
    function changeAtt(t, goods_id) {
        $("#spec_value_" + goods_id).attr('checked','checked');

        for (var i = 0; i<t.parentNode.childNodes.length;i++) {

            if (t.parentNode.childNodes[i].className == 'cattsel on') {
                t.parentNode.childNodes[i].className = '';

            }
        }
        t.className = "cattsel on";

        //返回已选属性
        var attr = getSelectedAttributes(document.forms['ECS_FORMBUY']);
        $.ajax({
            url:'exchange.php?act=attr',
            data:{'attr': attr},
            timeout:8000,
            type:'post',
            datatype:'text',
            success:function(msg){
                $('#xuan').html(msg)

            }
        });

        var len = $('.cattsel').length;
        if (len*1 == $('#specification_length').val()*1) {
            // alert(attr);
            //改变抽奖价格
            $.ajax({
                url:'exchange.php?act=price',
                data:{'attr': attr},
                timeout:8000,
                type:'post',
                datatype:'text',
                success:function(msg){
                    var kk2 = msg*1 + $('#pp').val()*1;
                    var kk = kk2.toFixed(1);
                    $('#price').html(kk);
                    var kk3 = $('#number').val() * kk;
                    var kk1 = kk3.toFixed(1);
                    $('#price1').html(kk1)
                    $('#cz').html(kk1)

                }
            });
        }
    }

    function getSelectedAttributes(formBuy)
    {
        var spec_arr = new Array();
        var j = 0;

        for (i = 0; i < formBuy.elements.length; i ++ )
        {
            var prefix = formBuy.elements[i].name.substr(0, 5);

            if (prefix == 'spec_' && formBuy.elements[i].type == 'radio'  && formBuy.elements[i].checked )
            {
                spec_arr[j] = formBuy.elements[i].value;
                j++ ;
            }
        }
        return spec_arr;
    }



</script>

<script language="javascript" type="text/javascript">
    function goods_cut(){
        var num_val=document.getElementById('number');
        var new_num=num_val.value;
        var Num = parseInt(new_num);
        if(Num>1){
            Num=Num-1;
            num_val.value=Num;
            var kk1 = $('#price').html()*Num;
            var kk = kk1.toFixed(1);
            $('#price1').html(kk);
            $('#cz').html(kk);
            $('#num').html(Num)
        }

    }
    function goods_add(){
        var num_val=document.getElementById('number');
        var new_num=num_val.value;
        var Num = parseInt(new_num);
        if (Num < $('#nn').val()*1) {
            Num=Num+1;
            num_val.value=Num;
            var kk1 = $('#price').html()*Num;
            var kk = kk1.toFixed(1);
            $('#price1').html(kk)
            $('#cz').html(kk);
            $('#num').html(Num)
        }

    }

    function uu(id){

        if (id <1 || isNaN(id) || id > $('#nn').val()*1) {
            alert('请正确填写数量')
            $('#number').val('1')
        }else{
            var kk1 = $('#price').html()*id;
            var kk = kk1.toFixed(1);
            $('#price1').html(kk)
            $('#cz').html(kk);
            $('#num').html(id)
        }
    }

    function submit_btn(){
        var len = $('.cattsel').length;
        if (len*1 == $('#specification_length').val()*1) {
            $('#page1').hide();
            $('#page2').show();
        }else{
            alert('请选择商品规格');
            return false;
        }
    }

    function fanhui(){
        $('#page2').hide();
        $('#page1').show();
    }
    function payment(id){
        $('#payment').val(id);
    }
    function tj(){
        var a = $('#payment').val();
        if (a == '') {
            alert('请选择支付方式')
        }else{
            ECS_FORMBUY.submit();
        }
    }

</script>



